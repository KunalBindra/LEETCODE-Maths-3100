class Solution {
    public int maxBottlesDrunk(int numBottles, int numExchange) {
        int empty=0;
        int drunk=0;
        while(numBottles>0)
        {
            empty+=numBottles;
            drunk+=numBottles;
            numBottles=0;
            

            if(empty>=numExchange)
            {
                numBottles+=1;
                empty-=numExchange;
                numExchange+=1;
            }
        }
        return drunk;
    }
}
